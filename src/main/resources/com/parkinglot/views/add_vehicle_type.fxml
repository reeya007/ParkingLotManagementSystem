<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.parkinglot.controllers.AddVehicleTypeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Add Vehicle Type" />
    <TextField fx:id="typeNameField" promptText="Type Name" />
    <TextField fx:id="hourlyRateField" promptText="Hourly Rate" />
    <Button text="Add" onAction="#handleAddVehicleType" />
    <Button text="Back" onAction="#handleBackButton" />
</VBox>